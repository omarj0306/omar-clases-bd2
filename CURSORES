CREATE TABLE TONTO (ID INTEGER, VALOR FLOAT, FECHA DATE);

BEGIN FOR I IN 1 .. 10 LOOP
INSERT INTO TONTO VALUES (I,I,SYSDATE);
END LOOP;
END;
/

SELECT * FROM TONTO;






*******CREAMOE LOS CURSORES *****

DECLARE 
CURSOR CURSOR_TONTO IS SELECT * FROM TONTO;
BEGIN

FOR REC IN CURSOR_TONTO LOOP
DBMS_OUTPUT.PUT_LINE('EN CADA VUELTA DEL SELECT DEL CURSOR VEMOS ESTO');
DBMS_OUTPUT.PUT_LINE(REC.VALOR);
END LOOP;
END;
/


EJERCICIO1
CREAR PROCEDIMIENTO QUE USE EL CURSOR DE ESTE TIPO, NO VA A TENER ARGUMENTO DE  ENTRA PERO SI UNO DE SALIDA



CREATE OR REPLACE PROCEDURE ACUMULADO_TONTO(SUMATORIA OUT FLOAT)
AS
CURSOR  CURSOR_TONTO IS SELECT * FROM TONTO;
BEGIN
SUMATORIA:=0;
FOR REC IN CURSOR_TONTO LOOP
SUMATORIA:= SUMATORIA+REC.ID*REC.VALOR;
END LOOP;
END;
/

DECLARE 
VALOR FLOAT;
BEGIN
ACUMULADO_TONTO(VALOR);
DBMS_OUTPUT.PUT_LINE(VALOR);
END;
/


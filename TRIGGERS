CREATE TABLE USUARIOS (ID_USUARIOS INTEGER, EDAD INTEGER, EMAIL VARCHAR2 (80));

CREATE TABLE USUARIO_MENOR (ID_USUARIO_MENOR INTEGER, EDAD INTEGER, EMAIL VARCHAR2 (80));

CREATE TABLE USUARIO_MAYOR (ID_USUARIO_MAYOR INTEGER, EDAD INTEGER, EMAIL VARCHAR2 (80));




EJERCICIO 2

CREATE OR REPLACE TRIGGER DISPARADOR_USUARIO_XXX 
BEFORE INSERT ON USUARIO_XXX FOR EACH ROW
BEGIN
IF :NEW.EDAD < 18 OR LENGTH( :NEW.EMAIL) < 3 THEN 
RAISE_APPLICATION_ERROR(-20001, 'LO SIENTO ERES MUY PEQUEÑO');
END IF;
END;


